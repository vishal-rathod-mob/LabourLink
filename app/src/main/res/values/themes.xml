<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabourLink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hsl_gray_10</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/hsl_gray_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hsl_gray_10</item>
        <item name="colorSecondaryVariant">@color/hsl_gray_10</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Dark icons on white background -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Procore.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Theme.Procore.Button.Secondary">
        <item name="backgroundTint">#D1D5D7</item>
<!--        <item name="android:textColor">@color/procore_button_secondary_text_color_selector</item>-->
<!--        <item name="iconTint">@color/procore_button_secondary_text_color_selector</item>-->
<!--        <item name="rippleColor">?attr/mxp_action_secondary_pressed</item>-->
    </style>

    <style name="Theme.Procore.Button.Secondary.Medium">
        <item name="android:minHeight">@dimen/medium_button_height</item>
        <item name="iconPadding">@dimen/medium_button_icon_end_margin</item>
<!--        <item name="android:textAppearance">@style/base_mdl_medium_font</item>-->
        <item name="cornerRadius">@dimen/medium_button_corner_radius</item>
    </style>

    <style name="Theme.Procore.Button.Secondary.Medium.IconOnly">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minWidth">@dimen/medium_button_height</item>
        <item name="android:maxWidth">@dimen/medium_button_height</item>
        <item name="android:paddingStart">@dimen/medium_button_padding</item>
        <item name="android:paddingEnd">@dimen/medium_button_padding</item>
    </style>

    <style name="MaterialComponents.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>